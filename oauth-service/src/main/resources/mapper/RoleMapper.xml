<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oauth.oauthservice.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.oauth.oauthservice.model.Role">
        <result column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="findRolesByUserId" resultType="com.oauth.oauthservice.model.Role">
        select * from role where id in (SELECT role_id from user_role where user_id = #{userId});
    </select>

</mapper>
